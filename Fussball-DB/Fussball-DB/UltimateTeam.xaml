                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Spieler_Name}" Margin="5"/>
                        <TextBlock Text="{Binding Path=Land}" Margin="5"/>
                        <TextBlock x:Name="textVerein" Text="{Binding Path=verein.Name}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="listBox2" HorizontalAlignment="Left" Height="476" Margin="660,108,0,0" VerticalAlignment="Top" Width="600" MouseDoubleClick="teamDoubleClick" SelectionChanged="teamSelectionChanged">
